<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".activity.WriteBoardActivity"
    android:background="@color/white"
    android:backgroundTint="@color/whitewhitegreen2">

    <RelativeLayout
        android:id="@+id/write_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white">

        <ImageView
            android:id="@+id/write_iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/baseline_arrow_back_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="식단 인증"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/write_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성 완료"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/green"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/image_frame"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/write_line1"
        android:layout_marginTop="4dp"
        android:background="@drawable/frame_write_board"
        android:backgroundTint="@color/white">

        <ImageView
            android:id="@+id/write_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/main_box"/>

        <LinearLayout
            android:id="@+id/write_select_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/baseline_add_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 선택"/>

        </LinearLayout>

    </FrameLayout>

    <EditText
        android:id="@+id/write_msg_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="메세지를 입력하세요"
        android:layout_below="@id/image_frame"
        android:inputType="textMultiLine"
        android:singleLine="true"
        android:minLines="1"
        android:maxLines="10"
        android:padding="8dp"
        android:background="@drawable/frame_write_board" />

</RelativeLayout>