<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.kys2024.dietcoach.data.NutritionProgressView
            android:id="@+id/nutritionProgressView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nutritionProgressView"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="탄수화물"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="단백질"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="지방"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progress_horizontal_carbs"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" />

            <ProgressBar
                android:id="@+id/progress_horizontal_protein"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" />

            <ProgressBar
                android:id="@+id/progress_horizontal_fat"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="100g"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="90g"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="80g"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_breakfast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#FF777777"
            android:layout_below="@id/line3">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_breakfast"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:menu="@menu/toolbar_home_add">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아침"
                        android:textSize="18sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="30dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/toolbar_breakfast_kcal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="180"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kcal"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@id/toolbar_breakfast_kcal"
                        android:layout_marginLeft="4dp"
                        android:layout_marginBottom="4dp"/>

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_lunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#FF777777"
            android:layout_below="@id/layout_breakfast">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_lunch"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:menu="@menu/toolbar_home_add">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="점심"
                        android:textSize="18sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="30dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/toolbar_lunch_kcal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kcal"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@id/toolbar_lunch_kcal"
                        android:layout_marginLeft="4dp"
                        android:layout_marginBottom="4dp"/>

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_dinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#FF777777"
            android:layout_below="@id/layout_lunch">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_dinner"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:menu="@menu/toolbar_home_add">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="저녁"
                        android:textSize="18sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="30dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/toolbar_dinner_kcal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="220"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kcal"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@id/toolbar_dinner_kcal"
                        android:layout_marginLeft="4dp"
                        android:layout_marginBottom="4dp"/>

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_snack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#FF777777"
            android:layout_below="@id/layout_dinner">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_snack"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:menu="@menu/toolbar_home_add">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="간식"
                        android:textSize="18sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="30dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/toolbar_snack_kcal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="220"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kcal"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@id/toolbar_snack_kcal"
                        android:layout_marginLeft="4dp"
                        android:layout_marginBottom="4dp"/>

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>