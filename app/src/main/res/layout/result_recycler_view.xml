<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/result_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계란"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/result_intake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100g"
            app:layout_constraintStart_toEndOf="@+id/result_food_name"
            app:layout_constraintTop_toTopOf="@+id/result_food_name"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/result_kacl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="140kcal"
            app:layout_constraintStart_toEndOf="@+id/result_intake"
            app:layout_constraintTop_toTopOf="@+id/result_intake"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/result_carbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="탄수화물"
            app:layout_constraintTop_toBottomOf="@+id/result_food_name"
            app:layout_constraintRight_toRightOf="@id/result_intake"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/result_protein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단백질"
            app:layout_constraintTop_toBottomOf="@+id/result_carbs"
            app:layout_constraintRight_toRightOf="@id/result_intake"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/result_fat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지방"
            app:layout_constraintTop_toBottomOf="@+id/result_protein"
            app:layout_constraintRight_toRightOf="@id/result_intake"
            android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>