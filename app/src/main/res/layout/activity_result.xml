<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".activity.ResultActivity"
    android:background="@color/white"
    android:backgroundTint="@color/whitewhitegreen2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_back"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/baseline_arrow_back_24"
            app:menu="@menu/toolbar_result_back"/>

        <ImageView
            android:id="@+id/result_iv"
            android:layout_width="330dp"
            android:layout_height="330dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/toolbar_back" />

        <TextView
            android:id="@+id/result_tv"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/result_iv"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:textSize="20sp"/>

        <Button

            android:id="@+id/savedata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/result_tv"
            android:text="저장"/>



        <Button
            android:id="@+id/result_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/result_tv"
            android:backgroundTint="@color/black"
            android:layout_toLeftOf="@id/result_btn_x"
            android:text="삭제"/>

        <Button
            android:id="@+id/result_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/result_tv"
            android:backgroundTint="@color/black"
            android:text="저장"
            android:layout_toRightOf="@id/result_btn_x"/>

    </RelativeLayout>

</RelativeLayout>